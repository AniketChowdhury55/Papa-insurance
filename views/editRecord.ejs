<!DOCTYPE html>
<html lang="en">
<head>
    <title>Edit Record</title>
</head>
<body>
    <h1>Edit Record</h1>
    <form action="/records/<%= record._id %>?_method=PUT" method="POST">
        <input type="text" name="policyHolder" value="<%= record.policyHolder %>" required>
        <input type="text" name="policyNumber" value="<%= record.policyNumber %>" required>
        <input type="number" name="premiumAmount" value="<%= record.premiumAmount %>" required>
        <input type="date" name="startDate" value="<%= record.startDate.toISOString().split('T')[0] %>" required>
        <input type="date" name="endDate" value="<%= record.endDate.toISOString().split('T')[0] %>" required>
        <button type="submit">Update Record</button>
    </form>
</body>
</html>
